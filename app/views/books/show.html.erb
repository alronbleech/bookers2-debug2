<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'layouts/errors', obj: @book %>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to user_path(@user) do %>
            <%= image_tag @user.get_profile_image, size:"100x100" %><br>
            <%= @user.name %>
            <% end %>
          </td>
          <td><%= link_to @books.title, @book %></td>
          <td><%= @books.body %></td>
          <% if @books.favorited_by?(current_user) %>
          <td>
            <%= link_to book_favorites_path(@books), class: "text-danger", method: :delete do %>
              <i class="fas fa-heart"></i><%= @books.favorites.count %>
            <% end %>
          </td>
          <% else %>
          <td>
            <%= link_to book_favorites_path(@books), class: "text-primary", method: :post do %>
              <i class="fas fa-heart"></i><%= @books.favorites.count %>
            <% end %>
          </td>
          <% end %>
          <td>コメント数:<%= @books.book_comments.count %></td>
          <% if @user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @books, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
          <% end %>
        </tr>
          <% @books.book_comments.each do |book_comment| %>
          <tr>
            <td>
              <%= image_tag @user.get_profile_image, size:"100x100" %>
              <%= book_comment.comment %>
              <% if book_comment.user == current_user %>
                <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %><br>
              <% end %>
              <%= link_to user_path(@user) do %>
                <%= @user.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
      </table>
      <%= form_with model: [@books, @book_comment] do |f| %>
        <%= f.text_area :comment, class: "w-100", rows:'5' %><br>
        <%= f.submit "送信" %>
      <% end %>
    </div>
  </div>
</div>